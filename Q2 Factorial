#include <iostream>
#include <cmath>
using namespace std;

//User Libraries

//Global Constants - Math/Physics Constants, Conversions,
//                   2-D Array Dimensions

//Function Prototypes
int fctrl(int);//Function to write for this problem

//Execution Begins Here
int main(int argc, char** argv) {
    //Declare Variables
    
    //Initialize Variables
    int n;
    //Process/Map inputs to outputs
    cout << "This program calculates the factorial using a function prototype found in the template for this problem." << endl;
    cout << "Input the number for the function." << endl;
    cin >> n;
    
    fctrl(n);
    //Output data
    
    //Exit stage right!
    return 0;
}

int fctrl(int n){
    int fact;
    fact = 1;

    
    for(int i=1;i<=n;i++){
        fact*=i;
    }
    

    cout << n << "! = " << fact;
}
